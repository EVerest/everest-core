{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Json schema for internal config",
    "type": "object",
    "required": [
        "ChargePointId",
        "CentralSystemURI",
        "ChargePointModel",
        "ChargePointVendor",
        "FirmwareVersion"
    ],
    "properties": {
        "ChargePointId": {
            "type": "string",
            "readOnly": true,
            "minLength": 1
        },
        "CentralSystemURI": {
            "type": "string",
            "readOnly": true,
            "minLength": 1
        },
        "ChargeBoxSerialNumber": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 25
        },
        "ChargePointModel": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 20
        },
        "ChargePointSerialNumber": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 25
        },
        "ChargePointVendor": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 20
        },
        "FirmwareVersion": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 50
        },
        "ICCID": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 20
        },
        "IMSI": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 20
        },
        "MeterSerialNumber": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 25
        },
        "MeterType": {
            "type": "string",
            "readOnly": true,
            "minLength": 1,
            "maxLength": 25
        },
        "AuthorizationKey": {
            "type": "string",
            "$comment": "FIXME: we should support a string here for convenience, but also support the bytearray!",
            "readOnly": true
        },
        "SupportedCiphers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "readOnly": true,
            "default": ["ECDHE-ECDSA-AES128-GCM-SHA256", "ECDHE-ECDSA-AES256-GCM-SHA384"]
        },
        "WebsocketReconnectInterval": {
            "$comment": "The reconnect interval of the websocket in seconds",
            "type": "integer",
            "readOnly": true,
            "minimum": 0,
            "default": 10
        }
    },
    "additionalProperties": false
}
