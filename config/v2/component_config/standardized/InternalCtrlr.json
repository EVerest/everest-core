          "variable_name": "SupportedOcppVersions",
          "characteristics": {
              "supportsMonitoring": true,
              "dataType": "SequenceList",
              "valuesList": "ocpp2.0.1,ocpp2.1"
          },
          "attributes": [
              {
                  "type": "Actual",
                  "mutability": "ReadOnly",
