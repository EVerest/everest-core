      "RoundClockAlignedTimestamps": {
          "variable_name": "RoundClockAlignedTimestamps",
          "characteristics": {
              "supportsMonitoring": false,
              "dataType": "boolean"
          },
          "attributes": [
              {
                  "type": "Actual",
                  "mutability": "ReadOnly",
                  "value": false
              }
