      "SupportedCiphers12": {
          "variable_name": "SupportedCiphers12",
          "characteristics": {
              "valuesList": "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-GCM-SHA384",
              "supportsMonitoring": true,
              "dataType": "MemberList"
          },
          "attributes": [
              {
                  "type": "Actual",
                  "mutability": "ReadOnly",
