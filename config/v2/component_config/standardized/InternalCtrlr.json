        "type": "boolean"
      },
      "AllowMFRootCertInstallWithUnsecureConnection": {
        "variable_name": "AllowMFRootCertInstallWithUnsecureConnection",
        "characteristics": {
          "supportsMonitoring": true,
          "dataType": "boolean"
