load("//modules:module.bzl", "cc_everest_module")

cc_library(
    name = "auth_handler",
    srcs = glob(["lib/*.cpp"]),
    hdrs = glob(["include/*.hpp"]),
    strip_include_prefix = "include",
    deps = [
        "@libtimer//:libtimer",
        "//third-party/bazel:boost_asio",
        "@everest-framework//:framework",
        "@com_github_HowardHinnant_date//:date",
        "//types:types_lib",
    ],
    # See https://github.com/HowardHinnant/date/issues/324
    local_defines = [
        "BUILD_TZ_LIB=ON",
        "USE_SYSTEM_TZ_DB=ON",
        "USE_OS_TZDB=1",
        "USE_AUTOLOAD=0",
        "HAS_REMOTE_API=0",
    ],
    copts = ["-std=c++17"],
)

IMPLS = [
    "main",
    "reservation",
]

cc_everest_module(
    name = "Auth",
    deps = [
        "@libtimer//:libtimer",
        ":auth_handler",
    ],
    impls = IMPLS,
)