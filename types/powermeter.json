{
    "description": "Powermeter types",
    "types": {
        "PowermeterAC": {
            "description": "Measured dataset (AC)",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "timestamp",
                "energy_Wh_import"
            ],
            "properties": {
                "timestamp": {
                    "description": "Timestamp of measurement",
                    "type": "number"
                },
                "meter_id": {
                    "description": "A (user defined) meter if (e.g. id printed on the case)",
                    "type": "string"
                },
                "phase_seq_error": {
                    "description": "true for 3 phase rotation error (ccw)",
                    "type": "boolean"
                },
                "energy_Wh_import": {
                    "description": "Imported energy in Wh (from grid)",
                    "type": "object",
                    "$ref": "/units#/Energy"
                },
                "energy_Wh_export": {
                    "description": "Exported energy in Wh (to grid)",
                    "type": "object",
                    "$ref": "/units#/Energy"
                },
                "power_W": {
                    "description": "Instantaneous power in Watt. Negative values are exported, positive values imported Energy.",
                    "type": "object",
                    "$ref": "/units#/Power"
                },
                "voltage_V": {
                    "description": "AC voltage in Volts",
                    "type": "object",
                    "$ref": "/units#/Voltage"
                },
                "current_A": {
                    "description": "AC current in Ampere",
                    "type": "object",
                    "$ref": "/units#/Current"
                },
                "frequency_Hz": {
                    "description": "Grid frequency in Hertz",
                    "type": "object",
                    "$ref": "/units#/Frequency"
                }
            }
        },
        "PowermeterDC": {
            "description": "Measured dataset (DC)",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "timestamp",
                "energy_Wh_import"
            ],
            "properties": {
                "timestamp": {
                    "description": "Timestamp of measurement",
                    "type": "string",
                    "format": "date-time"
                },
                "meter_id": {
                    "description": "Serial number of the meter, if available",
                    "type": "string"
                },
                "energy_Wh_import": {
                    "description": "Imported energy in Wh (from local DC grid/storage)",
                    "type": "number"
                },
                "energy_Wh_export": {
                    "description": "Exported energy in Wh (to local DC grid/storage)",
                    "type": "number"
                },
                "power_W": {
                    "description": "Instantaneous power in Watt. Negative values are exported, positive values imported Energy. (to local DC grid/storage)",
                    "type": "number"
                },
                "voltage_V": {
                    "description": "DC voltage in Volts",
                    "type": "number"
                },
                "current_A": {
                    "description": "DC current in Ampere",
                    "type": "number"
                }
            }
        }
    }
}
